{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "eslint:recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "indent": [0, "always"],
        "semi": [0, "always"],
        "react/jsx-indent": [0, "always"],
        "quotes":[0,"always",{"allowTemplateLiterals": true,"avoidEscape": true}],
        "jsx-quotes": ["0", "always"],
        "jsx-closing-bracket-location": [0, "always"]
    }
}
